

.country-selector
  margin 0 auto
  margin-bottom 4rem
  width: 100%

.list-of-cities
  display: flex
  flex-wrap: wrap
  width: 100%
  margin 0
  padding 0

.city-item
  display inline-block
  flex-grow: 1
  background: #555
  margin-right 2px
  margin-bottom 2px
  text-align center
  min-width: 16%
  height: 7rem
  padding 0

.city-item a
  display flex
  width: 100%
  height: 7rem
  justify-content center
  align-items: center;
  text-align: center;
  font-size 1.8rem
  font-family Helvetica-Light, arial
  color #EEE
  text-decoration none
  &:hover
    color: #CCC